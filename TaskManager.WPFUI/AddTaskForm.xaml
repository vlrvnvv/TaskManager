<Window x:Class="TaskManager.WPFUI.AddTaskForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавить задачу" Height="300" Width="400">
    <Grid>
        <!-- Your form fields here -->
        <StackPanel>
            <TextBlock Text="Название:"/>
            <TextBox x:Name="NameTextBox"/>
            <TextBlock Text="Описание:"/>
            <TextBox x:Name="DescriptionTextBox"/>
            <TextBlock Text="Исполнитель:"/>
            <TextBox x:Name="PerformerTextBox"/>
            <TextBlock Text="Трудоемкость задачи:"/>
            <TextBox x:Name="ComplexityTextBox"/>
            <TextBlock Text="Ожидаемое время выполнения(в часах):"/>
            <TextBox x:Name="ExecutionTimeTextBox"/>
            <!-- Add more fields as needed -->
            <Button Content="Сохранить" Click="SaveButton_Click" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
